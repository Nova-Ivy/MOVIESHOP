@model VanillaMovieShop.Models.Db.Customer
@{
    ViewData["Title"] = "CustomerOrders";
}

<h1>CustomerOrders</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Order" asp-action="ShowCustomerOrderList">
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Next" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-controller="Movies" asp-action="Index">Back to List</a>
</div>